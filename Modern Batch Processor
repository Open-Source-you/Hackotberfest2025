<body>

<div class="container">
    <h1>Batch Processor</h1>
    <p class="description">Enter a list of items to process, one per line.</p>

    <div class="form-group">
        <textarea id="batch-input" placeholder="e.g.,
item-A
item-B
item-C"></textarea>
    </div>

    <button id="process-btn" class="button-primary">Process Batch</button>

    <h2>Processing Log</h2>
    <pre id="output" class="log-output"></pre>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const batchInput = document.getElementById('batch-input');
        const processButton = document.getElementById('process-btn');
        const outputDisplay = document.getElementById('output');

        processButton.addEventListener('click', () => {
            const batchText = batchInput.value;
            const items = batchText.split('\n').filter(item => item.trim() !== '');

            if (items.length === 0) {
                outputDisplay.textContent = "No items to process.";
                return;
            }

            let logContent = "Starting batch process...\n";
            outputDisplay.textContent = logContent;

            const processItem = (index) => {
                if (index < items.length) {
                    const trimmedItem = items[index].trim();
                    logContent += `Processing item ${index + 1} of ${items.length}: "${trimmedItem}"... Done.\n`;
                    outputDisplay.textContent = logContent;
                    outputDisplay.scrollTop = outputDisplay.scrollHeight;
                    setTimeout(() => processItem(index + 1), 200); // Shorter delay for a faster feel
                } else {
                    logContent += `\nBatch process complete. Processed ${items.length} items.`;
                    outputDisplay.textContent = logContent;
                    outputDisplay.scrollTop = outputDisplay.scrollHeight;
                }
            };

            processItem(0);
        });
    });
</script>

